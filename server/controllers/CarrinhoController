const addPedido = async (req, res) => {
  let slug = req.body.slug.replace(" ", "-")

  let info = {
    titulo: req.body.titulo,
    slug: slug,
  };

  const categoria = await Categoria.create(info);
  res.status(200).send(categoria);
};


